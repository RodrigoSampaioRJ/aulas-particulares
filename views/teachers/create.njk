{% extends "layout.njk" %}

{% block head %}
    <title>Private Classes - Teachers</title>

{% endblock %}

{% block content %}

    <form class="card" method='POST' action='/teachers'>
        <section class="avatar" style="background: url(https://source.unsplash.com/collection/517198/600x600) no-repeat "></section>
        <section class="details">
            <h3>New Teacher</h3>

            <div class="item">
                <div>Avatar URL</div>
                <input type="url" name="avatar_url" placeholder='http://'>
            </div>

            <div class="item">
                <div>Nome</div>
                <input type="text" name="name" id="name" placeholder='Nome do professor'>
            </div>

            <div class="item">
                <div>Data de Nascimento</div>
                <input type="date" name="birthday">
            </div>

            <div class="item">
                <div>Grau de escolaridade</div>
                <select name="grade" id="grade">
                    <option value="Ensino Médio Completo">Ensino Médio Completo</option>
                    <option value="Ensino Superior Completo">Ensino Superior Completo</option>
                    <option value="Mestrado">Mestrado</option>
                    <option value="Doutorado">Doutorado</option>
                </select>
                {# <input type="text" name="grade" id="" placeholder='Grau de escolaridade'> #}
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <span><input type="radio" name="class_type" id="" value='Presencial' checked>Presencial</span>
                <span><input type="radio" name="class_type" id="" value='Distancia'>Distancia</span>

            </div>

            <div class="item">
                <div>Matérias</div>
                <input type="text" name="matters" id="matters" placeholder='Matérias separadas por vírgula'>

            </div>

            <button type='submit'>Salvar</button>
        </section>
    </form>

{% endblock %}